{
  "name": "@commentasaurus/commentasaurus",
  "version": "0.1.1",
  "private": false,
  "description": "A Docusaurus plugin that adds comments",
  "homepage": "https://github.com/NicholasRucinski/Commentasaurus#readme",
  "bugs": {
    "url": "https://github.com/NicholasRucinski/Commentasaurus/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NicholasRucinski/Commentasaurus.git"
  },
  "license": "MIT",
  "author": "Nicholas Rucinski (https://www.nickrucinski.com)",
	"keywords": [
		"docusaurus",
		"plugin",
		"comments",
		"documentation",
		"feedback",
		"collaboration"
	],
  "type": "commonjs",
  "main": "dist/index.mjs",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc && mv ./dist/index.js ./dist/index.mjs && npm run copy-css",
    "copy-css": "rsync -av --include='*.css' --include='*/' --exclude='*' src/ dist/",
    "prepublishOnly": "npm run build",
		"sync-docs": "rm -rf ../documentation/plugins/commentasaurus && cp -r ./dist/ ../documentation/plugins/commentasaurus",
    "clean": "rm -rf dist",
    "prepack": "npm run build"
  },
  "devDependencies": {
    "@docusaurus/types": "^3.9.2",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "typescript": "^5.9.3"
  },
	"peerDependencies": {
		"react": "^18 || ^19",
		"react-dom": "^18 || ^19"
	},
  "dependencies": {
    "clsx": "^2.1.1",
    "react-markdown": "^10.1.0",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "vaul": "^1.1.2"
  }
}
